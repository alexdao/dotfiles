# Path to your oh-my-zsh installation.
export ZSH=$HOME/.oh-my-zsh

# Set global editor
export EDITOR=vim

# Set name of the theme to load found in ~/.oh-my-zsh/themes/
ZSH_THEME="alex"

source $ZSH/oh-my-zsh.sh
source ~/.zsh/zsh-autosuggestions/zsh-autosuggestions.zsh

plugins=(git)

# Aliases for builds & tests
alias sz='source ~/.zshrc'
alias se='vim ~/.zshrc'

# Aliases for hg
alias hgd='hg diff -r .^'
alias hga='hg amend'
alias hgs='hg status'
alias hgs1='hg status --rev .^'
alias hgus='hg up fbandroid/stable'
alias ap='arc pull'
alias adp='arc diff --preview'
alias ado='arc diff --only'
alias afc='arc feature --cleanup'
alias jfs='jf submit'
alias jfsd='jf submit --no-publish'

# Rebases one commit on top of another
stack() {
  hg rebase -s $1 -d $2
}

# List files by pressing return
accept-line() {: "${BUFFER:="ls -lah"}"; zle ".$WIDGET"}
zle -N accept-line

# Send files via command line using https://transfer.sh
curl --version 2>&1 > /dev/null
if [ $? -ne 0 ]; then
  echo "Could not find curl."
  return 1
fi

transfer() {
    # check arguments
    if [ $# -eq 0 ];
    then
        echo "No arguments specified. Usage:\necho transfer /tmp/test.md\ncat /tmp/test.md | transfer test.md"
        return 1
    fi

    # get temporarily filename, output is written to this file show progress can be showed
    tmpfile=$( mktemp -t transferXXX )

    # upload stdin or file
    file=$1

    if tty -s;
    then
        basefile=$(basename "$file" | sed -e 's/[^a-zA-Z0-9._-]/-/g')

        if [ ! -e $file ];
        then
            echo "File $file doesn't exists."
            return 1
        fi

        if [ -d $file ];
        then
            # zip directory and transfer
            zipfile=$( mktemp -t transferXXX.zip )
            cd $(dirname $file) && zip -r -q - $(basename $file) >> $zipfile
            curl --progress-bar --upload-file "$zipfile" "https://transfer.sh/$basefile.zip" >> $tmpfile
            rm -f $zipfile
        else
            # transfer file
            curl --progress-bar --upload-file "$file" "https://transfer.sh/$basefile" >> $tmpfile
        fi
    else
        # transfer pipe
        curl --progress-bar --upload-file "-" "https://transfer.sh/$file" >> $tmpfile
    fi

    # cat output link
    cat $tmpfile

    # cleanup
    rm -f $tmpfile
}
